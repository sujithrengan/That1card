<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:weightSum="2"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="3dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cvp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5"
            android:padding="3dp"
            >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:layout_weight="3"
                 >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/productphoto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                />

</RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:layout_weight="2"
                android:layout_marginBottom="1dp"
                android:textSize="17sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/productname" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:layout_marginBottom="3dp"
                android:textSize="13sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/productprice" />
                <ImageView
                    android:id="@+id/wishstar"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_alignTop="@id/productprice"
                    android:layout_alignBottom="@id/productprice"
                    android:layout_alignRight="@id/productprice"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:id="@+id/yt"
                    android:background="@drawable/yt"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"

                    android:layout_toLeftOf="@id/wishstar"
                    android:scaleType="fitCenter" />


            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>