<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:id="@+id/scrollView" >
<RelativeLayout
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thehp.that1card.Plain_Cat"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="#000000"
        android:id="@+id/iv_pr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_alignStart="@+id/iv_pr"
        android:layout_width="270dp"
        android:layout_height="270dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/pro_name"
        android:textStyle="bold"
        android:textSize="33sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/iv_pr"
        android:layout_alignStart="@+id/iv_pr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/pro_desc"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_below="@+id/pro_name"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@+id/pro_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/pro_price"
        android:layout_below="@+id/pro_desc"
        android:layout_alignStart="@+id/pro_desc"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/pro_pricestrike"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/pro_price"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/pro_price"
        android:layout_toEndOf="@+id/pro_name" />


</RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/scrollView"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#121212"></LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#565656"></LinearLayout>

    </LinearLayout>
</LinearLayout>
